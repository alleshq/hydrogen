{
	"name": "hydrogen",
	"version": "1.0.0",
	"repository": "git@github.com:alleshq/hydrogen.git",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"start:app": "yarn workspace app start",
		"dev": "concurrently \"npm:dev:ui\" \"npm:dev:internal\" \"npm:dev:app\"",
		"dev:app": "NODE_ENV=DEVELOPMENT yarn workspace app start",
		"dev:ui": "NODE_ENV=DEVELOPMENT yarn workspace ui start",
		"build:ui": "yarn workspace ui build",
		"dev:internal": "NODE_ENV=DEVELOPMENT yarn workspace internal start",
		"build:internal": "yarn workspace internal build",
		"format": "prettier --write \"**/*.+(js|jsx|json|scss)\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn format"
		}
	},
	"devDependencies": {
		"concurrently": "^5.1.0",
		"husky": "^4.2.3",
		"prettier": "^2.0.2"
	}
}
