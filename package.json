{
	"name": "hydrogen",
	"version": "1.0.0",
	"repository": "git@github.com:alleshq/hydrogen.git",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev:ui": "yarn workspace ui start",
		"dev:app": "yarn workspace app start",
		"dev:internal": "yarn workspace internal start",
		"format": "prettier --write \"**/*.+(js|jsx|json|scss)\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn format"
		}
	},
	"devDependencies": {
		"husky": "^4.2.3",
		"prettier": "^2.0.2"
	}
}
